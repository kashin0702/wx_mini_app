.goods-box {
  display: flex;
  border-bottom: 5rpx solid #ccc;
  margin: 10rpx 0;
}
.left {
  flex:2;
}
.right {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.left image {
  width: 80%;
}
.goods-name {
 /* 新流体布局，未完全支持,建议加浏览器私有前缀 */
 display: -webkit-box;
 overflow: hidden;
 /* 从上到下自动排列子元素 */
 -webkit-box-orient: vertical;
 /* 第几行显示省略号 */
 -webkit-line-clamp: 2; 
}
.goods-price {
  color: red;
}